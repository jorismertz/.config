{
  "compilerOptions": {
    "target": "ES2020",
    "jsx": "preserve",
    "outDir": "./dist",
    "rootDir": "src/",
    "removeComments": true,
    "strict": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true
  },
  "exclude": ["**/tests/**/*"]
}
