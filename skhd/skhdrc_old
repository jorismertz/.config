# Resize window to direction
ctrl + alt - left: yabai -m window --resize right:-100:0 || yabai -m window --resize left:-100:0
ctrl + alt - right: yabai -m window --resize right:100:0 || yabai -m window --resize left:100:0
ctrl + alt - up: yabai -m window --resize top:0:-100 ||  yabai -m window --resize bottom:0:-100
ctrl + alt - down: yabai -m window --resize top:0:100 || yabai -m window --resize bottom:0:100

# Align floating window on grid
ctrl + alt - g: yabai -m window --grid 10:10:1:1:8:8

# Mirror space vertically
ctrl + alt - r: yabai -m space --rotate 180

# Smart light controls
ralt - up: ~/.config/scripts/home_assistant/dimmer.fish up
ralt - down: ~/.config/scripts/home_assistant/dimmer.fish down
ralt - left: ~/.config/scripts/home_assistant/cycleScenes.fish previous #; ~/.config/scripts/home_assistant/dist/fetchCurrentScene.fish
ralt - right: ~/.config/scripts/home_assistant/cycleScenes.fish next #; ~/.config/scripts/home_assistant/dist/fetchCurrentScene.fish

# Cycle scenes
# rctrl - end: ~/.config/scripts/home_assistant/dist/cycleScenes

# Open new window of currently focused app
ctrl + cmd - n: ~/.config/scripts/dupeWindow.fish

# Swap monitors
ctrl + cmd - q: ~/.config/scripts/yabai-display-swap

# Refesh desktop environment
ctrl + cmd - r: ~/.config/scripts/refreshDesktop.fish

# App shortcuts
ctrl + cmd - d: ~/.config/scripts/open-term.fish
ctrl + cmd - s: open -a Spotify
ctrl + cmd - w: open -a "Brave Browser"
ctrl + cmd - c: open -b com.microsoft.VSCode
ctrl + cmd - 1: open -a 1Password
ctrl + cmd - h: open -a "Home Assistant"

ctrl + alt - d: yabai -m space --destroy; ~/.config/scripts/refreshUbersichtWidgets.fish
ctrl + alt - c: yabai -m space --create; ~/.config/scripts/refreshUbersichtWidgets.fish; yabai -m space --focus last

# Toggle only float of window, no other fancy trickery with this one.
ctrl + alt - l: yabai -m window --toggle float

# Connect / Disconnect Airpods
ctrl + cmd - a: ~/.config/scripts/toggle-airpods-connection.fish

# Fullscreen current window
ctrl + alt - f: yabai -m window --toggle native-fullscreen

# Swap window to direction
ctrl + lshift + alt - left: yabai -m window --swap west
ctrl + lshift + alt - right: yabai -m window --swap east
ctrl + lshift + alt - up: yabai -m window --swap north
ctrl + lshift + alt - down: yabai -m window --swap south

# Float window in middle of screen
# ctrl + alt - m: ~/.config/scripts/yabai-better-float/toggle-window-float.fish

# Split window
ctrl + alt - s: yabai -m window --toggle split

# Balance out workspace
# ctrl + alt - b: yabai -m space --balance

# Switch workspace
lctrl - 1: yabai -m space --focus 1
lctrl - 2: yabai -m space --focus 2
lctrl - 3: yabai -m space --focus 3
lctrl - 4: yabai -m space --focus 4
lctrl - 5: yabai -m space --focus 5
lctrl - 6: yabai -m space --focus 6
lctrl - 7: yabai -m space --focus 7
lctrl - 8: yabai -m space --focus 8
lctrl - 9: yabai -m space --focus 9

# Switch workspace < - >
lctrl - left: yabai -m space --focus prev || yabai -m space --focus last
lctrl - right: yabai -m space --focus next || yabai -m space --focus first

# Send window to display ( replaced with send window to space )
# ctrl + alt - 1: yabai -m window --display 1 && yabai -m display --focus 1
# ctrl + alt - 2: yabai -m window --display 2 && yabai -m display --focus 2

#send window to space
ctrl + alt - 1: yabai -m window --space 1 && yabai -m space --focus 1
ctrl + alt - 2: yabai -m window --space 2 && yabai -m space --focus 2
ctrl + alt - 3: yabai -m window --space 3 && yabai -m space --focus 3
ctrl + alt - 4: yabai -m window --space 4 && yabai -m space --focus 4
ctrl + alt - 5: yabai -m window --space 5 && yabai -m space --focus 5
ctrl + alt - 6: yabai -m window --space 6 && yabai -m space --focus 6
ctrl + alt - 7: yabai -m window --space 7 && yabai -m space --focus 7
ctrl + alt - 8: yabai -m window --space 8 && yabai -m space --focus 8
ctrl + alt - 9: yabai -m window --space 9 && yabai -m space --focus 9

# Focus window
ctrl + lshift - left: yabai -m window --focus west || yabai -m display --focus 2
ctrl + lshift - right: yabai -m window --focus east || yabai -m display --focus 1
ctrl + lshift - up: yabai -m window --focus north
ctrl + lshift - down: yabai -m window --focus south

# Switch gap size [ 0 -> 12 ]
ralt - k: ~/.config/scripts/enablegap.fish
ralt - l: ~/.config/scripts/disablegap.fish

# automatically adjust gap size (kind of redundant)
# ralt - l: sh ~/.config/scripts/autoGapAdjust.sh

# Warp window to direction
ctrl + cmd - left: yabai -m window --warp west || yabai -m window --display 2
ctrl + cmd - right: yabai -m window --warp east || yabai -m window --display 1
ctrl + cmd - up: yabai -m window --warp north
ctrl + cmd - down: yabai -m window --warp south
